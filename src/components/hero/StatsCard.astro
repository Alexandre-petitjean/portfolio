---
export interface Props {
    value: string;
    label: string;
}

const { value, label } = Astro.props;
---

<div class="bg-bg/70 backdrop-blur-sm rounded-lg p-4 border border-border shadow-sm">
    <div class="text-2xl font-bold text-primary-600">{value}</div>
    <div class="text-sm text-text-muted">{label}</div>
</div> 