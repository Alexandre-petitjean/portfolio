---
import { Icon } from 'astro-icon/components';
import ThemeToggle from './ThemeToggle.astro';
---

<!-- Navigation -->
<nav class="fixed top-0 w-full bg-gradient-to-r from-bg/95 via-bg-secondary/95 to-primary-50/95 backdrop-blur-md border-b border-primary-500/20 z-50">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-5">
        <div class="absolute inset-0 bg-gray-900/5" style="background-image: radial-gradient(circle at 1px 1px, rgba(0,0,0,0.15) 1px, transparent 0); background-size: 20px 20px;"></div>
    </div>
    
    <div class="relative max-w-screen-2xl mx-auto px-6 lg:px-12 py-4">
        <div class="flex justify-between items-center">
            <!-- Logo/Name with gradient -->
            <div class="font-bold text-xl bg-gradient-to-r from-primary-600 to-primary-700 bg-clip-text text-transparent">
                Alexandre Petitjean
            </div>
            
            <!-- Navigation Links -->
            <div class="hidden md:flex items-center space-x-8 text-sm">
                <a href="#hero" class="relative text-text hover:text-primary-600 transition-all duration-200 group flex items-center space-x-2">
                    <!-- Home Icon -->
                    <Icon name="heroicons:home" class="w-4 h-4" />
                    <span>Accueil</span>
                    <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-primary-600 to-primary-700 group-hover:w-full transition-all duration-200"></span>
                </a>
                <a href="#offers" class="relative text-text hover:text-primary-600 transition-all duration-200 group flex items-center space-x-2">
                    <!-- Briefcase Icon -->
                    <Icon name="heroicons:briefcase" class="w-4 h-4" />
                    <span>Services</span>
                    <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-primary-600 to-primary-700 group-hover:w-full transition-all duration-200"></span>
                </a>
                <a href="#skills" class="relative text-text hover:text-primary-600 transition-all duration-200 group flex items-center space-x-2">
                    <!-- Academic Cap Icon -->
                    <Icon name="heroicons:academic-cap" class="w-4 h-4" />
                    <span>Compétences</span>
                    <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-primary-600 to-primary-700 group-hover:w-full transition-all duration-200"></span>
                </a>
                <a href="#projets" class="relative text-text hover:text-primary-600 transition-all duration-200 group flex items-center space-x-2">
                    <!-- Code Icon -->
                    <Icon name="heroicons:code-bracket" class="w-4 h-4" />
                    <span>Projets</span>
                    <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-primary-600 to-primary-700 group-hover:w-full transition-all duration-200"></span>
                </a>
                <a href="#about" class="relative text-text hover:text-primary-600 transition-all duration-200 group flex items-center space-x-2">
                    <!-- User Icon -->
                    <Icon name="heroicons:user" class="w-4 h-4" />
                    <span>À propos</span>
                    <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-primary-600 to-primary-700 group-hover:w-full transition-all duration-200"></span>
                </a>
                
                <!-- Délimiteur vertical -->
                <div class="w-px h-6 bg-gradient-to-b from-transparent via-primary-600/50 to-transparent"></div>
                
                <!-- Theme Toggle -->
                <ThemeToggle />
                
                <!-- Délimiteur vertical -->
                <div class="w-px h-6 bg-gradient-to-b from-transparent via-primary-600/50 to-transparent"></div>
                
                <!-- Bouton Contact CTA -->
                <a href="#contact" class="group relative inline-flex items-center justify-center px-4 py-2 font-medium text-white transition-all duration-200 ease-out rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 focus:ring-offset-bg">
                    <span class="absolute inset-0 w-full h-full transition duration-200 ease-out transform translate-x-0.5 translate-y-0.5 bg-primary-700 group-hover:translate-x-0 group-hover:translate-y-0 rounded-lg"></span>
                    <span class="absolute inset-0 w-full h-full bg-primary-600 border border-primary-500 group-hover:bg-primary-500 rounded-lg"></span>
                    <span class="relative flex items-center space-x-2">
                        <!-- Mail Icon -->
                        <Icon name="heroicons:envelope" class="w-4 h-4" />
                        <span>Contact</span>
                    </span>
                </a>
            </div>
            
            <!-- Mobile menu button -->
            <div class="md:hidden flex items-center space-x-2">
                <!-- Theme Toggle Mobile -->
                <ThemeToggle />
                
                <button class="text-text hover:text-primary-600 transition-colors p-2">
                    <!-- Bars 3 Icon -->
                    <Icon name="heroicons:bars-3" class="w-6 h-6" />
                </button>
            </div>
        </div>
    </div>
</nav> 